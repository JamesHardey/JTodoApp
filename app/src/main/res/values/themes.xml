<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GTodoApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>

        <item name="colorOnSecondary">@color/black</item>

        <item name="searchViewStyle">@style/CustomIcon</item>



        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="colorControlNormal">@color/white</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="CustomIcon" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchIcon">@drawable/search</item>
        <item name="searchHintIcon">@drawable/search</item>
        <item name="closeIcon">@drawable/close</item>
<!--        <item name="editTextColor">@color/white</item>-->
<!--        <item name="searchHintIcon">@drawable/search</item>-->
    </style>

    <style name="toolbar">
        <item name="android:editTextColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="CustumIcon" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>


</resources>